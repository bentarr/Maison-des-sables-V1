<script>
	import { gsap } from "gsap";
	import { ScrollTrigger } from "gsap/ScrollTrigger";
	gsap.registerPlugin(ScrollTrigger);

	window.addEventListener('load', () => {
		
		// --- 1. ANIMATIONS GSAP ---
		const revealElements = document.querySelectorAll('.reveal-text');
		revealElements.forEach(el => {
			gsap.fromTo(el,¬†
				{ y: 30, opacity: 0 },
				{ y: 0, opacity: 1, duration: 1.2, ease: "power3.out", scrollTrigger: { trigger: el, start: "top 90%" } }
			);
		});

		// --- 2. GESTION DES MODALES ---
		const openModalBtns = document.querySelectorAll('[data-modal-target]');
		const closeBtns = document.querySelectorAll('.close-modal, .modal-overlay');
		const formInput = document.getElementById('selected-plan-input') as HTMLInputElement;
		const contactSection = document.getElementById('contact');

		function openModal(modalId: string) {
			const modal = document.getElementById(modalId);
			if (modal) {
				modal.classList.remove('hidden');
				modal.classList.add('flex');
				const content = modal.querySelector('.modal-content');
				// @ts-ignore
				setTimeout(() => { content.classList.remove('scale-95', 'opacity-0'); content.classList.add('scale-100', 'opacity-100'); }, 10);
			}
		}

		function closeModal() {
			const modals = document.querySelectorAll('.modal');
			modals.forEach(modal => {
				const content = modal.querySelector('.modal-content');
				if (content) {
					content.classList.remove('scale-100', 'opacity-100');
					content.classList.add('scale-95', 'opacity-0');
				}
				setTimeout(() => {
					modal.classList.add('hidden');
					modal.classList.remove('flex');
				}, 300);
			});
		}

		openModalBtns.forEach(btn => {
			btn.addEventListener('click', () => {
				// @ts-ignore
				const targetId = btn.dataset.modalTarget;
				openModal(targetId);
			});
		});

		closeBtns.forEach(btn => btn.addEventListener('click', closeModal));

		// --- 3. S√âLECTION DEPUIS CARTE ABONNEMENT (UNIQUEMENT) ---
		const planCards = document.querySelectorAll('.plan-card');
		planCards.forEach(card => {
			card.addEventListener('click', () => {
				// @ts-ignore
				const planName = card.dataset.plan;
				planCards.forEach(c => c.classList.remove('active'));
				card.classList.add('active');
				if(formInput) formInput.value = `Intendance : ${planName}`;
				contactSection?.scrollIntoView({ behavior: 'smooth' });
			});
		});

		// --- 4. LOGIQUE D'ENVOI DU FORMULAIRE ---
		const form = document.getElementById('contact-form') as HTMLFormElement;
		if (form) {
			form.addEventListener('submit', async (e) => {
				e.preventDefault();¬†
				const formData = new FormData(form);
				const data: any = Object.fromEntries(formData);
				
				// ASTUCE : On combine Intendance + la formule choisie dans le nom du service
				const formule = data.plan_context || "Demande G√©n√©rale";
				data.service_name = `${formule}`;
				
				delete data.plan_context;
				
				try {
					const response = await fetch('http://localhost:5000/api/contact/lead', {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify(data)
					});
					if (response.ok) {
						alert("‚úÖ Votre demande a √©t√© transmise. Merci.");
						form.reset();
					} else {
						alert("‚ùå Erreur technique.");
					}
				} catch (error) {
					alert("‚ùå Serveur indisponible.");
				}
			});
		}
	});

	// Navbar changement au scroll
	const navbar = document.querySelector("#navbar");
	window.addEventListener("scroll", () => {
		if (window.scrollY > 50) {¬†
			navbar?.classList.add("bg-charbon/95", "py-4", "backdrop-blur-md");
			navbar?.classList.remove("py-8");
		} else {¬†
			navbar?.classList.remove("bg-charbon/95", "py-4", "backdrop-blur-md");
			navbar?.classList.add("py-8");
		}
	});
</script>