import Layout from '../layouts/Layout.astro';
---

<Layout title="Main dans la Main | Maison des Sables">
	
	<nav id="navbar" class="fixed top-0 w-full z-50 px-6 md:px-12 py-8 flex justify-between items-center text-white transition-all duration-500 ease-in-out">
		<a href="/" class="font-serif text-xl tracking-wider font-semibold hover:text-or transition-colors flex items-center gap-2">
			<span class="text-sm">←</span> Retour
		</a>
		<a href="/" class="hidden md:block font-serif text-2xl tracking-wider font-bold">Maison des Sables</a>
		<a href="#contact" class="group relative px-6 py-2 border border-white/30 text-xs font-sans uppercase tracking-widest rounded-std overflow-hidden hover:border-white transition-all">
			<span class="relative z-10 group-hover:text-charbon transition-colors">Contact</span>
			<div class="absolute inset-0 bg-white translate-y-full group-hover:translate-y-0 transition-transform duration-500 ease-[cubic-bezier(0.19,1,0.22,1)] z-0"></div>
		</a>
	</nav>

	<header class="relative h-[85vh] bg-charbon overflow-hidden flex items-center justify-center">
		<div class="absolute inset-0 z-0">
			<img src="/aide_accompagnement.png" alt="Accompagnement" class="w-full h-full object-cover opacity-60 scale-105 animate-slow-zoom"/>
			<div class="absolute inset-0 bg-gradient-to-b from-charbon/80 via-transparent to-[#F9F7F2]"></div>
		</div>
		
		<div class="relative z-10 text-center px-4 max-w-5xl">
			<span class="inline-block py-1 px-4 border border-or/40 rounded-full text-[10px] font-sans tracking-[0.3em] uppercase text-or mb-8 backdrop-blur-md font-bold reveal-text">Bienveillance & Lien Social</span>
			<h1 class="font-serif text-6xl md:text-8xl lg:text-[10rem] text-charbon mb-8 leading-[0.9]">
				<div class="overflow-hidden"><span class="block reveal-text text-white">Main dans</span></div>
				<div class="overflow-hidden mt-2"><span class="block reveal-text italic text-or">la Main.</span></div>
			</h1>
			<p class="text-white/80 max-w-2xl mx-auto font-sans text-xl leading-relaxed reveal-text font-light">
				Parce que nos aînés méritent une attention particulière. Nous offrons une présence rassurante, discrète et chaleureuse pour faciliter le quotidien.
			</p>
		</div>
	</header>

	<section class="bg-[#F9F7F2] text-charbon py-32 px-0 md:px-12 relative overflow-hidden">
		<div class="max-w-[1600px] mx-auto relative z-10">
			<div class="text-center mb-16 px-6">
				<span class="text-or text-xs font-sans tracking-[0.3em] uppercase mb-4 block font-bold reveal-text">Une Présence de Confiance</span>
				<h3 class="font-serif text-4xl md:text-6xl mb-6 reveal-text text-charbon">Pour chaque instant</h3>
				<div class="w-20 h-px bg-or/30 mx-auto reveal-text"></div>
				<p class="md:hidden text-[10px] uppercase tracking-widest text-charbon/40 mt-4 animate-pulse">← Glisser pour découvrir →</p>
			</div>

			<div class="flex overflow-x-auto snap-x snap-mandatory gap-8 px-6 pb-12 md:grid md:grid-cols-2 lg:grid-cols-4 md:overflow-visible md:pb-0 no-scrollbar">
				<div class="service-card min-w-[85vw] md:min-w-0 snap-center bg-white rounded-[2.5rem] overflow-hidden shadow-lg border border-charbon/5 h-full flex flex-col group hover:border-or/40 transition-all duration-500 hover:shadow-2xl hover:-translate-y-2">
					<div class="h-72 overflow-hidden relative shrink-0">
						<img src="/card_lien.png" class="w-full h-full object-cover transition-all duration-1000 group-hover:scale-110 group-hover:brightness-110 group-hover:contrast-110" alt="Lien & Partage"/>
						<div class="absolute inset-0 bg-charbon/10 group-hover:bg-transparent transition-colors"></div>
					</div>
					<div class="p-10 flex-1 flex flex-col relative">
						<h4 class="font-serif text-3xl mb-4 text-charbon group-hover:text-or transition-colors duration-300">Lien & Partage</h4>
